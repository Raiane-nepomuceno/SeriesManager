<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_poster_serie"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/text_titulo_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_poster_serie"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            tools:text="Título da série" />


        <TextView
            android:id="@+id/text_ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_titulo_serie"
            android:layout_marginTop="2dp"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            tools:text="Ano:" />

        <TextView
            android:id="@+id/text_ano_serie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_titulo_serie"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="3dp"
            android:padding="16dp"
            android:textColor="@android:color/black"
            tools:text="Ano"/>

        <ImageView
            android:id="@+id/btnEdita"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/text_titulo_serie"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-8dp"
            android:onClick="editarSerie"
            android:padding="30dp"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="50dp"
            android:layout_height="100dp"
            android:layout_below="@+id/text_titulo_serie"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-10dp"
            android:layout_toRightOf="@+id/btnEdita"
            android:onClick="removerSerie"
            android:src="@drawable/ic_delete" />


    </RelativeLayout>


</android.support.v7.widget.CardView >