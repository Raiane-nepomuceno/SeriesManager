<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    tools:context=".view.temporada.TemporadaActivity">

    <RelativeLayout
        android:id="@+id/image_poster_serie"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_num_seq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/num_seq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_quant_episodio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_num_seq"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/quant_episodio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_num_seq"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_ano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_num_seq"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="30dp"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_anoEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_num_seq"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="30dp"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_quant_episodios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <ImageView
            android:id="@+id/btnAddTemp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/text_quant_episodios"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:onClick="adicionarTemporada"
            android:padding="30dp"
            android:src="@drawable/ic_add" />

        <ImageView
            android:id="@+id/image_edita"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/text_quant_episodios"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="30dp"
            android:onClick="editarTemporada"
            android:padding="30dp"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/image_edita"
            android:layout_below="@+id/text_quant_episodios"
            android:onClick="removerTemporada"
            android:src="@drawable/ic_remove" />

       
    </RelativeLayout>


</androidx.cardview.widget.CardView>