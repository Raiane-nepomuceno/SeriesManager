<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="8dp"
    tools:context=".view.temporada.TemporadaActivity">

    <RelativeLayout
        android:id="@+id/image_poster_serie"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_num_seq_ep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/num_seq_ep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text_nome_episodio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_num_seq_ep"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_marginRight="0dp"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/nome_ep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_below="@+id/text_num_seq_ep"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/text_duracao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/num_seq_ep"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="53dp"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tempo_duracao_ep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/num_seq_ep"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="53dp"
            android:padding="16dp"
            android:textColor="@android:color/black" />

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tempo_duracao_ep"
            android:layout_marginLeft="230dp"
            android:text="Assistido" />

        <ImageView
            android:id="@+id/image_edit"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_below="@+id/tempo_duracao_ep"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="30dp"
            android:onClick="editar"
            android:padding="30dp"
            android:src="@drawable/ic_edit" />

        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tempo_duracao_ep"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/image_save"
            android:onClick="removerEpisodio"
            android:src="@drawable/ic_remove" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>