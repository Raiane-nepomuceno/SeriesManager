<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".view.episodio.FormAddEpisodioActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cadastro de Episódios" />
    <TextView
        android:id="@+id/textnumSeqEpisodios"
        android:layout_width="181dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:ems="35"
        android:text="Número:" />

    <EditText
        android:id="@+id/numEpisodioEt"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:ems="45"
        android:layout_marginLeft="5dp"
        android:inputType="number" />
    <TextView
        android:id="@+id/textViewNomeEpisodio"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="15"
        android:text="Nome:" />

    <EditText
        android:id="@+id/nomeEpisodioEt"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:inputType="text" />
    <TextView
        android:id="@+id/textViewDuracao"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="15"
        android:text="Tempo de Duração:" />

    <EditText
        android:id="@+id/duracaoEpisodioEt"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="5dp"
        android:inputType="number" />
    <TextView
        android:id="@+id/nomeSerie"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="15"
        android:text="Série:"/>

    <TextView
        android:id="@+id/nomeSerieEt"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="-20dp"
        android:ems="15" />

    <TextView
        android:id="@+id/nomeTemp"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:ems="35"
        android:text="Temporada:"/>

    <TextView
        android:id="@+id/numTempEt"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="-20dp"
        android:ems="15" />
    <Button
        android:id="@+id/btnLimparEpisod"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="10dp"
        android:text="LIMPAR"
        android:textAllCaps="false"
        android:onClick="limparDadosEpisodio"/>

    <Button
        android:id="@+id/btnSalvarEpisodio"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="-49dp"
        android:text="SALVAR"
        android:textAllCaps="false"
        android:onClick="salvarEpisodio"/>
</LinearLayout>